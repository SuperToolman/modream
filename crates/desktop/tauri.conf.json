{
  "$schema": "../../web/node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Modream",
  "version": "0.3.4",
  "identifier": "com.modream.app",
  "build": {
    "frontendDist": "../../web/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd ../../web && pnpm run dev",
    "beforeBuildCommand": "cd ../../web && pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Modream - 私人媒体库",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
